{% extends 'base.html.twig' %}

{% block body %}

    <h1>Connexion</h1>

    <div class="container">
        <form action="{{ path('security_login') }}" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="form-group">
                <input type="email" value="{{ last_username }}" placeholder="Adresse email..." required name="_username" type="text" class="form-control">
            </div>
            <div class="form-group">
                <input placeholder="Mot de passe..." required name="_password" type="password" class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Se connecter</button>
            </div>
        </form>
        
        <a href="{{ path('security_registration')}}">S'inscrire</a>

        <a href="{{ path('security_forgot_password')}}">Mot de passe oubli√©</a>
    </div>    

{% endblock %}